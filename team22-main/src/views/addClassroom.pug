doctype html
html
  head
    include head.pug
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Add a Classroom
    style.
      body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
      }
      .form-container {
        background-color: white;
        padding: 3rem;
        border-radius: 8px;
        max-width: 400px;
        margin: 0 auto;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }
      .form-group {
        margin-bottom: 15px;
      }
      .form-group label {
        display: block;
        margin-bottom: 5px;
      }
      .form-group input {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
      }
      .submit-btn {
        background-color: #4CAF50;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
      }
      .submit-btn:hover {
        background-color: #45a049;
      }
    .body
      .form-container
        h2 Class Registration Form
        form(action="submitFormClass", method="POST")
          #classList
            .form-group
              label(for="className") Class Name:
              input(type="text", name="className[]" placeholder="Enter the Class name", required)
            .form-group
              label(for="classYear") Class Year:
              input(type="number", name="classYear[]" placeholder="Enter the Class year", required)
          button(type="button", id="addClassBtn") Add Another Class
          button.submit-btn(type="submit") Submit
        h3 #{string}

    script.
      document.getElementById('addClassBtn').addEventListener('click', function() {
        const classList = document.getElementById('classList');
        const newClassGroup = document.createElement('div');
        newClassGroup.classList.add('form-group');
        newClassGroup.innerHTML = `
          <label for="className">Class Name:</label>
          <input type="text" name="className[]" placeholder="Enter the Class name" required>
          <label for="classYear">Class Year:</label>
          <input type="number" name="classYear[]" placeholder="Enter the Class year" required>
        `;
        classList.appendChild(newClassGroup);
      });

